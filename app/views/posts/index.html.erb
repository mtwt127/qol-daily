<h2>日記一覧</h2>

<% @posts.reverse_each do |post|%>
    <div class = "daily
                  <% if post.qol == 0 %>    low
                  <% elsif post.qol == 1 %> mediam
                  <% elsif post.qol == 2 %> high
                  <% end %>">
        <form action= "/daily/<%= post.id %>" method = "POST">
            <input name="_method" type="hidden" value="DELETE">
            <h4>
            [
            <% if post.qol == 0 %>    Low
            <% elsif post.qol == 1 %> Mediam
            <% elsif post.qol == 2 %> High
            <% end %>
            ]
            <%= post.title %>
            <button type="submit">DEL</button>
            </h4>
        </form>
        <p><%= post.body %></p>       
    </div>     

<% end %>
